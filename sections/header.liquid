{% comment %} {% assign logo = section.settings.logo %} {% endcomment %}

<!-- Another way of assign a variable -->
{% liquid
  assign logo = section.settings.logo
  assign menu = section.settings.menu
  assign enable_search = section.settings.enable_check_box
%}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    {% if logo != null %}
      <!-- <img src="{{ logo | image_url  }}" alt="{{ shop.name }}" width=100 height=100> -->
      {{ logo | image_url: width: 500 | image_tag }}

    {% else %}
      <a class="navbar-brand" href="#">{{ shop.name }}</a>
    {% endif %}
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        {% for link in menu.links %}
          <li class="nav-item {% if link.links.size>0 %} dropdown {% endif %}">
            <a
              class="nav-link {% if link.links.size>0 %} dropdown-toggle {% endif %}"
              href="{{ link.url }}"
              {% if link.links.size > 0 %}
                class="nav-link dropdown-toggle"
                href="#"
                id="navbarDropdown_{{ forloop.index }}"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              {% endif %}
            >
              {{ link.title }}
            </a>
            {% if link.links.size > 0 %}
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">

                {% for dropLink in link.links %}
                <li><a class="dropdown-item" href="#">{{ dropLink.title }}</a></li>
                  {% endfor %}
              </ul>
            {% endif %}
          </li>
        {% endfor %}

        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            href="#"
            id="navbarDropdown"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Dropdown
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <li><a class="dropdown-item" href="#">Action</a></li>
            <li><a class="dropdown-item" href="#">Another action</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="#">Something else here</a></li>
          </ul>
        </li>
      </ul>
      {% if enable_search %}
        <form class="d-flex">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      {% endif %}
    </div>
  </div>
</nav>

{% schema %}
{
   "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Select Logo",
      "info": "Recommended size: 200px*200px"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    },
    {
      "type": "header",
      "content": "Search Bar"
    },
    {
      "type": "checkbox",
      "id": "enable_check_box",
      "label": "Enable Search Bar",
      "default":true
    }
  ]
}
{% endschema %}
